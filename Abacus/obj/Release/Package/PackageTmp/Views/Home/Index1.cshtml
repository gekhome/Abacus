@{
    ViewBag.Title = "Αρχική-Abacus";
    string currentYear = DateTime.Today.Year.ToString();
}


@section footer {
<div class="body-content" style="margin:10px 30px 5px 30px;">
    <table width:100%>
        <tr>
            <td width="5%" align="left"><img src="~/images/metro/oaed-logo-blue-trans.png" height="60" width="74" /></td>
            <td align="center">
                <font color="#000000" size="3" style="font-weight:600">Διεύθυνση Αρχικής Επαγγελματικής Εκπαίδευσης και Κατάρτισης</font>
            </td>
        </tr>
        <tr>
            <td width="5%" align="left"></td>
            <td align="center">
                <font color="#000000" size="2">Μελέτη-Ανάπτυξη: Δρ. Γεώργιος Κυριακάκης</font>
            </td>
        </tr>
        <tr>
            <td width="5%" align="left"></td>
            <td align="center">
                <font color="#000000" size="2">Συνεργασία: Αγγελική Αργυροπούλου, Βρεφονηπιακοί Σταθμοί ΟΑΕΔ</font>
            </td>
        </tr>
    </table>
</div>

}


<style>
    p.serif {
        font-family: "Times New Roman", Times, serif;
        font-size: medium;
    }

    p.sansserif {
        font-family: "Segoe UI", Arial, Helvetica, sans-serif;
        font-size: medium;
    }
</style>

<div class="row">
    <h1 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Καλώς ήλθατε</h1>
    <label style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size:16px;font-weight:normal">
        Φυσικό Αντικείμενο Βρεφονηπιακών Σταθμών Ο.Α.Ε.Δ. (2019-@currentYear)
    </label>
    @(Html.Kendo().PanelBar()
        .Name("IntroPanelBar")
        .Items(items =>
        {
        items.Add()
        .Text("Είσοδος")
        .Selected(true)
        .Expanded(true)
        .Content(@<text>
        <div id="page">
            <div class="suites">
                <div class="suite-column" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">
                    <img src="~/images/metro/main-kindergarten.png" height="112" width="112" />
                    @*@Html.ActionLink("Είσοδος σταθμού", "Login", "USER_STATIONS", null, new { @style = "background-color:#4C4C4C;" })*@
                    @Html.ActionLink("Είσοδος σταθμού", "Login", "USER_STATIONS")
                </div>
                <div class="suite-column">
                    <img src="~/images/metro/main-admin.png" height="112" width="112" />
                    @*@Html.ActionLink("Είσοδος διαχειριστή", "Login", "USER_ADMINS", null, new { @style = "background-color:#4C4C4C;" })*@
                    @Html.ActionLink("Είσοδος διαχειριστή", "Login", "USER_ADMINS")
                </div>
            </div>
        </div>
        </text>);       
        items.Add()
        .Text("Σχετικά με την εφαρμογή")
        .Content(
        @<text>              
        <!-- Tabtrip section -->
        <div style="margin-left:6px;margin-right:6px">
            <p></p>
            <p class="sansserif" style="margin-bottom:10px">
                Ως φυσικό αντικείμενο νοείται οποιαδήποτε διαδικασία που έχει να κάνει με τα βρεφονήπια και προσωπικό των Β.Ν.Σ.<br />
                Περιλαμβάνονται σε αυτό και οι δαπάνες που γίνονται για τη λειτουργία του κάθε βρεφονηπιακού σταθμού.
            </p>
            <p class="sansserif">
                Στόχοι της εφαρμογής είναι:
            </p>
            <p class="sansserif">
                <img src="~/Images/phone/appbar.card.1.png" width="40" height="40" />
                Δημιουργία μητρώου βρεφονηπίων και προσωπικού για κάθε σχολικό έτος
            </p>
            <p class="sansserif">
                <img src="~/Images/phone/appbar.card.2.png" width="40" height="40" />
                Ηλεκτρονικό αρχείο παρουσιολογίων βρεφονηπίων.
            </p>
            <p class="sansserif">
                <img src="~/Images/phone/appbar.card.3.png" width="40" height="40" />
                Ηλεκτρονικό αρχείο δαπανών τροφείου, καθαριότητας και γενικών/έκτακτων δαπανών.
            </p>
            <p class="sansserif">
                <img src="~/Images/phone/appbar.card.4.png" width="40" height="40" />
                Η εξαγωγή στατιστικών στοιχείων που χρειάζεται η Διεύθυνση Α2 και το γραφείο Διοίκησης.
            </p>
            <p class="sansserif">
                <img src="~/Images/phone/appbar.card.5.png" width="40" height="40" />
                Η online διαθεσιμότητα στην Α2, των παραπάνω στοιχείων, με αποτέλεσμα τη μείωση της γραφειοκρατίας και διακίνησης εγγράφων.
            </p>
            <p></p>
        </div>
        <!-- End of Tabstrip -->
        </text>);
        items.Add()
        .Text("Καταχωρήσεις σταθμών")
        .Content(@<text>
        <div style="margin-left:6px;margin-right:6px">

            <p class="sansserif"></p>
            <p class="sansserif" style="font-size:medium">
                <span>
                    <font style="font-family:'Segoe UI';font-size:medium">
                        Οι βασικές καταχωρήσεις που πρέπει να γίνονται από τους βρεφονηπιακούς σταθμούς είναι:
                    </font>
                </span>
                <br />
            </p>
            <p class="sansserif">
                <img src="~/Images/metro/orderedList1.png" width="28" height="28" />
                Στοιχεία βρεφονηπίων και προσωπικού του σταθμού
            </p>
            <p class="sansserif">
                <img src="~/Images/metro/orderedList2.png" width="28" height="28" />
                Ωρολόγιο πρόγραμμα προσωπικού
            </p>
            <p class="sansserif">
                <img src="~/Images/metro/orderedList3.png" width="28" height="28" />
                Παρουσιολόγια βρεφονηπίων
            </p>
            <p class="sansserif">
                <img src="~/Images/metro/orderedList4.png" width="28" height="28" />
                Ημερήσεις δαπάνες τροφείου, καθαριότητας και γενικές ή έκτακτες δαπάνες
            </p>
            <p />
            <p class="sansserif" style="font-weight:bold;font-style:italic;font-size:14px">
                ΣΗΜΕΙΩΣΗ
            </p>
            <p class="sansserif" style="font-weight:bold;font-style:italic;font-size:13px">
                <font>
                    Κάθε ΒΝΣ έχει ένα ξεχωριστό λογαριασμό στην εφαρμογή αυτή με συνέπεια να λειτουργεί την εφαρμογή
                    χωρίς πρόσβαση στα δεδομένα άλλων βρεφονηπιακών σταθμών.
                </font>
            </p>
        </div>
        </text>);
        items.Add()
        .Text("Ανακοινώσεις")
        .Content(@<text>
        <div style="margin-left:6px;margin-right:6px">
            <p></p>
            <p class="sansserif" style="margin-bottom:10px">
                <img src="~/Images/phone/appbar.card.png" width="48" height="48" />
                Η εφαρμογή αυτή έχει δοκιμαστεί στους περιηγητές (browsers)

                <ul style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">
                    <li style="margin-bottom:10px">
                        Google Chrome, Internet Explorer, Mozilla Firefox και Microsoft Edge.
                    </li>
                    <li style="margin-bottom:10px">
                        Η διεπαφή της εφαρμογής είναι βελτιστοποιημένη για τον περιηγητή Google Chrome και είναι
                        βέλτιστη για ανάλυση οθόνης τουλάχιστον 1280 x 1024.
                    </li>
                    <li style="margin-bottom:10px">
                        Για τη βέλτιστη εμφάνιση συνιστάται μεγιστοπόίηση του παραθύρου του περιηγητή, ειδικά για μικρές οθόνες.
                    </li>
                </ul>
            </p>
        </div>
        </text>);
        })
    )


</div>