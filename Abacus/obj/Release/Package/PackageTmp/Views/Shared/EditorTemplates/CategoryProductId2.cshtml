@using System.Collections
@using Abacus.Models
@using Abacus.DAL
@model int

@(Html.Kendo().DropDownListFor(m => m)
    .AutoBind(false)
    .DataValueField("ΠΡΟΙΟΝ_ΚΩΔ")
    .DataTextField("ΠΡΟΙΟΝ_ΜΟΝΑΔΑ")
    .OptionLabel("Επιλογή...")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("FilteredProduct_Read", "Station").Data("filterProducts");
        })
        .ServerFiltering(true);
    })
    .CascadeFrom("ΚΑΤΗΓΟΡΙΑ")
)
@Html.ValidationMessageFor(m => m)