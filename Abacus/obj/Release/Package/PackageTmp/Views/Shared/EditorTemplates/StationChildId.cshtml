@using System.Collections
@using Abacus.Models
@using Abacus.DAL
@model int

@(Html.Kendo().DropDownListFor(m => m)
    .AutoBind(false)
    .DataValueField("CHILD_ID")
    .DataTextField("ΟΝΟΜΑΤΕΠΩΝΥΜΟ")
    .OptionLabel("Επιλογή...")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("FilteredChild_Read", "Station").Data("filterChildren");
        })
        .ServerFiltering(true);
    })
)
@Html.ValidationMessageFor(m => m)