@model Abacus.Models.ChildViewModel
@using Abacus.DAL;
@using Abacus.Models;

@{
    ViewBag.Title = "Καρτέλα παιδιού";
    Layout = "~/Views/Shared/_LayoutMin.cshtml";
}

<link href="@Url.Content("~/Content/mvcNotify.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/mvcNotify.js")" type="text/javascript"></script>
<script type="text/javascript">
    //Set autoclear of messages. Don't put this into $(document).ready.
    //mvcNotify.autoClearTimeout = 0; //don't autoclear any types
    mvcNotify.autoClearTimeout = 10000; //Unit of milliseconds. Requires mvcNotify.typesToAutoClear to be set to something (default behavior).
    mvcNotify.typesToConsoleLog = "all"; //Log all types to console.
</script>

<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style>
        /*.control-label {
            font-family: 'Segoe UI';
            white-space: pre-line;
        }*/

        .k-textbox {
            display: block;
            width: 100%;
            height: 34px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.428571429;
            color: #555555;
            vertical-align: middle;
            background-color: #ffffff;
            border: 1px solid #cccccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
            -webkit-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
            transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
        }

            .k-textbox:focus {
                border-color: #66afe9;
                outline: 0;
                -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
                box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6);
            }
    </style>
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="body-content" style="margin:20px 60px 10px 20px">
        <fieldset>
            <table class="col-md-12" style="border:solid;border-width:thin;margin:10px 20px 10px 20px">
                <tr>
                    <th style="background-color:#1D7CAE;padding-left:20px;padding-top:4px;padding-bottom:4px">
                        <font style="font-family:'Segoe UI';font-size:medium;color:white;">Στοιχεία βρεφονηπίου</font>
                    </th>
                </tr>
                <tr>
                    <td>
                        <span style="margin:5px 5px 5px 5px;float:right;font-family:'Segoe UI';">
                            <a class="btn btn-warning" style="font-family:'Segoe UI';font-size:14px" href="#" onclick="javascript:window.close();opener.window.focus();">Κλείσιμο καρτέλας</a>
                        </span>
                        <span style="margin:5px 5px 5px 5px;float:right;font-family:'Segoe UI';">
                            <input style="font-family:'Segoe UI';font-size:14px" type="submit" value="Αποθήκευση" class="btn btn-info" />
                        </span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="body-content">
                        @(Html.Kendo().TabStrip()
                        .Name("StudentTabStrip")
                        .Items(items =>
                        {
                            items.Add()
                            .Text("Ατομικά στοιχεία")
                            .Selected(true)
                            .ContentHtmlAttributes(new { style = "min-height: 480px" })
                            .Content(@<text>
                                <p></p>
                                <div class="col-md-10" style="margin-bottom:5px">
                                    @Html.LabelFor(model => model.ΑΜ, new { @class = "control-label col-md-3" })
                                    <div class="col-md-2" style="max-width:60px">
                                        @Html.EditorFor(model => model.ΑΜ, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ΑΜ, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-11" style="margin-bottom:5px">
                                    @Html.LabelFor(model => model.ΕΠΩΝΥΜΟ, new { @class = "control-label col-md-3" })
                                    @Html.EditorFor(model => model.ΕΠΩΝΥΜΟ, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ΕΠΩΝΥΜΟ, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-11" style="margin-bottom:5px">
                                    @Html.LabelFor(model => model.ΟΝΟΜΑ, new { @class = "control-label col-md-3" })
                                    @Html.EditorFor(model => model.ΟΝΟΜΑ, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ΟΝΟΜΑ, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-11" style="margin-bottom:5px">
                                    @Html.LabelFor(model => model.ΑΦΜ, new { @class = "control-label col-md-3" })
                                    @Html.EditorFor(model => model.ΑΦΜ, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ΑΦΜ, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-11" style="margin-bottom:5px">
                                    @Html.LabelFor(model => model.ΠΑΤΡΩΝΥΜΟ, new { @class = "control-label col-md-3" })
                                    @Html.EditorFor(model => model.ΠΑΤΡΩΝΥΜΟ, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ΠΑΤΡΩΝΥΜΟ, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-11" style="margin-bottom:5px">
                                    @Html.LabelFor(model => model.ΜΗΤΡΩΝΥΜΟ, new { @class = "control-label col-md-3" })
                                    @Html.EditorFor(model => model.ΜΗΤΡΩΝΥΜΟ, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ΜΗΤΡΩΝΥΜΟ, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-11" style="margin-bottom:5px">
                                    @Html.LabelFor(model => model.ΦΥΛΟ, new { @class = "control-label col-md-3" })
                                    @(Html.Kendo().DropDownListFor(model => model.ΦΥΛΟ)
                                        .Name("ΦΥΛΟ")
                                        .DataTextField("ΦΥΛΟ")
                                        .DataValueField("ΦΥΛΟ_ΚΩΔ")
                                        .HtmlAttributes(new { style = "width:170px;" })
                                        .OptionLabel("---Επιλογή---")
                                        .AutoBind(true)
                                        .DataSource(source => { source.Read(read => { read.Action("GetGenders", "Station"); }).ServerFiltering(true); })
                                    )
                                    @Html.ValidationMessageFor(model => model.ΦΥΛΟ, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-11" style="margin-bottom:5px">
                                    @Html.LabelFor(model => model.ΗΜΝΙΑ_ΓΕΝΝΗΣΗ, new { @class = "control-label col-md-3" })
                                    @Html.EditorFor(model => model.ΗΜΝΙΑ_ΓΕΝΝΗΣΗ, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ΗΜΝΙΑ_ΓΕΝΝΗΣΗ, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-11" style="margin-bottom:5px">
                                    @Html.LabelFor(model => model.ΑΜΚΑ, new { @class = "control-label col-md-3" })
                                    @Html.EditorFor(model => model.ΑΜΚΑ, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ΑΜΚΑ, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-11" style="margin-bottom:5px">
                                    @Html.LabelFor(model => model.ΔΙΕΥΘΥΝΣΗ, new { @class = "control-label col-md-3" })
                                    @Html.EditorFor(model => model.ΔΙΕΥΘΥΝΣΗ, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ΔΙΕΥΘΥΝΣΗ, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-11" style="margin-bottom:5px">
                                    @Html.LabelFor(model => model.ΤΗΛΕΦΩΝΑ, new { @class = "control-label col-md-3" })
                                    @Html.EditorFor(model => model.ΤΗΛΕΦΩΝΑ, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.ΤΗΛΕΦΩΝΑ, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-11" style="margin-bottom:5px">
                                    @Html.LabelFor(model => model.EMAIL, new { @class = "control-label col-md-3" })
                                    @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                                </div>
                                <p></p>
                            </text>);
                            items.Add()
                                .Text("Στοιχεία εγγραφής")
                                .ContentHtmlAttributes(new { style = "min-height: 400px" })
                                .Content(@<text>
                                    <p></p>
                                    <table>
                                        <tr id="ilikia">
                                            <td>
                                                <div class="col-md-6">
                                                    @Html.LabelFor(model => model.ΗΛΙΚΙΑ, new { @class = "control-label" })
                                                </div>
                                                <div class="col-md-3">
                                                    <label class="form-control" style="max-height:20px;min-width:100px; background-color:#EEE">@Html.DisplayFor(model => model.ΗΛΙΚΙΑ)</label>
                                                    @Html.ValidationMessageFor(model => model.ΗΛΙΚΙΑ, "", new { @class = "text-danger" })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr id="energos">
                                            <td>
                                                <div class="col-md-6">
                                                    @Html.LabelFor(model => model.ΕΝΕΡΓΟΣ, new { @class = "control-label" })
                                                </div>
                                                <div class="col-md-1">
                                                    @Html.EditorFor(model => model.ΕΝΕΡΓΟΣ, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.ΕΝΕΡΓΟΣ, "", new { @class = "text-danger" })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr id="eisodos_date">
                                            <td>
                                                <div class="col-md-6">
                                                    @Html.LabelFor(model => model.ΕΙΣΟΔΟΣ_ΗΜΝΙΑ, new { @class = "control-label", @title = "Ημ/νία που εγγράφηκε στο σταθμό για πρώτη φορά" })
                                                </div>
                                                <div class="col-md-2">
                                                    @Html.EditorFor(model => model.ΕΙΣΟΔΟΣ_ΗΜΝΙΑ, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.ΕΙΣΟΔΟΣ_ΗΜΝΙΑ, "", new { @class = "text-danger" })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr id="eisodos_num">
                                            <td>
                                                <div class="col-md-6">
                                                    @Html.LabelFor(model => model.ΕΞΟΔΟΣ_ΗΜΝΙΑ, new { @class = "control-label", @title = "Ημ/νία οριστικής εξόδου από το σταθμό" })
                                                </div>
                                                <div class="col-md-2" style="max-width:60px">
                                                    @Html.EditorFor(model => model.ΕΞΟΔΟΣ_ΗΜΝΙΑ, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.ΕΞΟΔΟΣ_ΗΜΝΙΑ, "", new { @class = "text-danger" })
                                                </div>
                                            </td>
                                        </tr>
                                        <tr id="comments">
                                            <td>
                                                <div class="col-md-6">
                                                    @Html.LabelFor(model => model.ΠΑΡΑΤΗΡΗΣΕΙΣ, new { @class = "control-label" })
                                                </div>
                                                <div class="col-md-2">
                                                    @Html.TextAreaFor(model => model.ΠΑΡΑΤΗΡΗΣΕΙΣ, 4, 80, new { @style = "width:480px" })
                                                    @Html.ValidationMessageFor(model => model.ΠΑΡΑΤΗΡΗΣΕΙΣ, "", new { @class = "text-danger" })
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                    <p></p>
                            </text>);
                        })
                            )       @*--- End of Tabstrip ---*@
</div>
                    </td>
                </tr>
            </table>
        </fieldset>
    </div>
}   @* ---  End of BeginForm ----------*@
