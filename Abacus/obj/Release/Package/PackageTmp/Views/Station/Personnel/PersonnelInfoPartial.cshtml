@model sqlPersonInfoViewModel
@using Abacus.DAL;
@using Abacus.Models;

@{
    Layout = null;
    //string birthdate = "";
    //Nullable<DateTime> dt = Model.ΗΜΝΙΑ_ΓΕΝΝΗΣΗ;
    //birthdate = dt.HasValue ? dt.Value.ToString("dd-MM-yyyy") : string.Empty;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style scoped="scoped">
        .k-detail-cell .k-tabstrip .k-content {
            padding: 0.2em;
        }

        .student-details ul {
            list-style: none;
            font-style: italic;
            margin: 15px;
            padding: 0;
        }

        .student-details ul li {
            margin: 0;
            line-height: 1.7em;
        }

        .student-details label {
            display: inline-block;
            width: 200px;
            padding-right: 10px;
            text-align: right;
            font-style: normal;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="body-content" style="margin:5px 0px 5px 0px;font-size:small;">

        @(Html.Kendo().TabStrip()
        .Name("TabStrip")
        .SelectedIndex(0)
        .Animation(animation => animation.Open(open => open.Fade(FadeDirection.In)))
        .Items(items =>
        {
            items.Add().Text("Τμήματα").Content(@<text>

            @(Html.Kendo().Grid<sqlEducatorTmimaInfoViewModel>()
            .Name("Grid")
            .Columns(columns =>
            {
                columns.Bound(o => o.ΣΧΟΛΙΚΟ_ΕΤΟΣ).Width(20);
                columns.Bound(o => o.ΤΜΗΜΑ_ΟΝΟΜΑ).Width(30);
            })
            .DataSource(dataSource => dataSource
                .Ajax()
                .PageSize(10)
                .Read(read => read.Action("EducatorTmimaInfo_Read", "Station", new { personId = Model.PERSONNEL_ID }))
            )
            .Pageable(pageable => pageable
            .Refresh(true)
            .PageSizes(true)
            .ButtonCount(3))
            .Sortable()
            .Filterable()
            .HtmlAttributes(new { style = "display: block;font-size:11px" })
            .Sortable(sortable => sortable.AllowUnsort(true).SortMode(GridSortMode.MultipleColumn))
            .Scrollable(scr => scr.Height(140))                
            )
            </text>);
            items.Add().Text("Στοιχεία εργαζομένου").Content(
                @<div class="student-details">
                     <table>
                         <tr>
                             <td style="width:540px">
                                 <ul>
                                     <li>
                                         <label>Πατρώνυμο:</label>@Html.DisplayFor(m => m.ΠΑΤΡΩΝΥΜΟ, new { @class = "control-label col-md-10" })
                                     </li>
                                     <li>
                                         <label>Μητρώνυμο:</label>@Html.DisplayFor(m => m.ΜΗΤΡΩΝΥΜΟ, new { @class = "control-label col-md-10" })
                                     </li>
                                     <li>
                                         <label>Έτος γέννησης:</label>@Html.DisplayFor(m => m.ΕΤΟΣ_ΓΕΝΝΗΣΗ, new { @class = "control-label col-md-10" })
                                     </li>
                                     <li>
                                         <label>Ηλικία:</label>@Html.DisplayFor(m => m.ΗΛΙΚΙΑ, new { @class = "control-label col-md-10" })
                                     </li>
                                     <li>
                                         <label>Διεύθυνση:</label>@Html.DisplayFor(m => m.ΔΙΕΥΘΥΝΣΗ, new { @class = "control-label col-md-10" })
                                     </li>
                                     <li>
                                         <label>Τηλέφωνα:</label>@Html.DisplayFor(m => m.ΤΗΛΕΦΩΝΑ, new { @class = "control-label col-md-10" })
                                     </li>
                                </ul>
                         </td>
                             <td style="width:460px">
                                 <ul>
                                     <li>
                                         <label>E-Mail:</label>@Html.DisplayFor(m => m.EMAIL, new { @class = "control-label col-md-10" })
                                     </li>
                                     <li>
                                         <label>Α.Φ.Μ.:</label>@Html.DisplayFor(m => m.ΑΦΜ, new { @class = "control-label col-md-10" })
                                     </li>
                                     <li>
                                         <label>Ειδικότητα:</label>@Html.DisplayFor(m => m.EIDIKOTITA_TEXT, new { @class = "control-label col-md-10" })
                                     </li>
                                     <li>
                                         <label>Φύλο:</label>@Html.DisplayFor(m => m.ΦΥΛΟ, new { @class = "control-label col-md-10" })
                                     </li>
                             </ul>
                         </td>
                     </tr>
                 </table>
                </div>);
        })
        )   @*-- Tabstrip ---*@
    </div>
</body>
</html>
