@using System.Collections
@using Abacus.Models
@using Abacus.DAL
@model int

@(Html.Kendo().DropDownListFor(m => m)
    .AutoBind(false)
    .DataValueField("ΤΜΗΜΑ_ΚΩΔ")
    .DataTextField("ΟΝΟΜΑΣΙΑ")
    .OptionLabel("Επιλογή...")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("FilteredTmima_Read", "Admin").Data("filterTmimata");
        })
        .ServerFiltering(true);
    })
    .CascadeFrom("ΣΧΟΛΙΚΟ_ΕΤΟΣ")
)
@Html.ValidationMessageFor(m => m)